  border-radius: 8rpx;
}

.lifestyle-left image{
  width: 258rpx;
  height: 334rpx;
  border-radius: 8rpx;
}

.lifestyle-right{
  width: 406rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  padding-bottom: 10rpx;
  height: 334rpx;
}

.lifestyle-right-item image{
  width: 406rpx;
  height: 156rpx;
  border-radius: 8rpx;
}