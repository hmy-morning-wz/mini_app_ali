}

.index-wrapper {
  display: block;
  padding-bottom: 100rpx;
}

.advertiment {
  margin-top: 22rpx;
}

.advertiment image {
  display: block;
  margin: auto;
  border-radius: 14rpx;
}

input[placeholder],
[placeholder],
*[placeholder] {
  text-align: center;
}

.poster {
  width: 64rpx;
  height: 64rpx;
  margin-right: 20rpx;
}

.swiper-item .icon {
  width: 68rpx;
}

.swiper-item .text {
  font-size: 12px;
  color: #5C5C5C;
  width: 75%;
}

.swiper-item {
  position: relative;
  height: 102rpx;
  padding-left: 32rpx;
  padding-right: 32rpx;
}
.welfare{
  padding-bottom: 20rpx;
}
.lifestyle{
  padding-bottom: 40rpx;
}
.swiper-welfare {
  height: 210rpx;
  padding-left: 32rpx;
  padding-right: 32rpx;
}

.swiper-welfare .welfare-image {
  width: 686rpx;
  height: 210rpx;
  border-radius: 8rpx;
}

.lifestyle-container{
  padding-left: 32rpx;
  padding-right: 32rpx;
}

